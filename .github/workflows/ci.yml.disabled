name: CI/CD Pipeline

on:
  push:
    branches: [ main, develop ]
  pull_request:
    branches: [ main, develop ]
  workflow_dispatch:

jobs:
  lint:
    name: Lint Code
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v4

      - name: Set up Python
        uses: actions/setup-python@v5
        with:
          python-version: '3.10'
          cache: 'pip'

      - name: Install dependencies
        run: |
          python -m pip install --upgrade pip
          pip install ruff

      - name: Run ruff linter
        run: ruff check .

      - name: Check formatting
        run: ruff format --check .

  type-check:
    name: Type Check
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v4

      - name: Set up Python
        uses: actions/setup-python@v5
        with:
          python-version: '3.10'
          cache: 'pip'

      - name: Install dependencies
        run: |
          python -m pip install --upgrade pip
          make install-dev

      - name: Run mypy
        run: |
          mypy -p aurora_core --config-file pyproject.toml
          mypy -p aurora_context_code --config-file pyproject.toml
          mypy -p aurora_soar --config-file pyproject.toml
          mypy -p aurora_reasoning --config-file pyproject.toml
          mypy -p aurora_cli --config-file pyproject.toml
          mypy -p aurora_testing --config-file pyproject.toml

  test:
    name: Test Python ${{ matrix.python-version }} (Non-ML)
    runs-on: ubuntu-latest
    strategy:
      matrix:
        python-version: ['3.10', '3.11', '3.12']
    steps:
      - uses: actions/checkout@v4

      - name: Set up Python ${{ matrix.python-version }}
        uses: actions/setup-python@v5
        with:
          python-version: ${{ matrix.python-version }}
          cache: 'pip'

      - name: Install dependencies
        run: |
          python -m pip install --upgrade pip
          make install-dev

      - name: Run all non-ML tests
        run: |
          echo "=== Running All Non-ML Tests ==="
          pytest tests/ -m "not ml" --cov=packages --cov-report=xml --cov-fail-under=74 -v
          echo "All non-ML tests completed"

      - name: Upload coverage to Codecov
        uses: codecov/codecov-action@v4
        if: matrix.python-version == '3.10'
        with:
          file: ./coverage.xml
          flags: unittests
          name: codecov-umbrella

  test-ml:
    name: Test ML Dependencies (Python 3.10)
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v4

      - name: Set up Python
        uses: actions/setup-python@v5
        with:
          python-version: '3.10'
          cache: 'pip'

      - name: Cache ML dependencies
        id: cache-ml
        uses: actions/cache@v4
        with:
          path: ~/.cache/pip
          key: ${{ runner.os }}-pip-ml-${{ hashFiles('**/pyproject.toml', '**/setup.py') }}
          restore-keys: |
            ${{ runner.os }}-pip-ml-
            ${{ runner.os }}-pip-

      - name: Free up disk space
        run: |
          sudo rm -rf /usr/share/dotnet
          sudo rm -rf /opt/ghc
          sudo rm -rf /usr/local/share/boost
          df -h

      - name: Install dependencies
        run: |
          python -m pip install --upgrade pip
          make install-dev
          pip install --no-cache-dir sentence-transformers torch

      - name: Check disk space
        run: df -h

      - name: Run ML tests only
        run: |
          pytest tests/ -m ml -v --cov=packages --cov-report=xml --cov-fail-under=0

      - name: Upload ML coverage
        uses: codecov/codecov-action@v4
        with:
          file: ./coverage.xml
          flags: ml-tests
          name: codecov-ml

  performance:
    name: Performance Benchmarks (Non-ML)
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v4

      - name: Set up Python
        uses: actions/setup-python@v5
        with:
          python-version: '3.10'
          cache: 'pip'

      - name: Install dependencies
        run: |
          python -m pip install --upgrade pip
          make install-dev

      - name: Run performance benchmarks (excluding ML)
        run: pytest tests/performance/ -m "not ml" -v --cov-fail-under=0

      - name: Check performance targets
        run: |
          echo "Performance benchmarks completed"
          echo "Verify targets: write/read <50ms, cold start <200ms, parser <200ms"

  security:
    name: Security Scan
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v4

      - name: Set up Python
        uses: actions/setup-python@v5
        with:
          python-version: '3.10'
          cache: 'pip'

      - name: Install dependencies
        run: |
          python -m pip install --upgrade pip
          pip install bandit

      - name: Run bandit security scanner
        run: bandit -r packages/ -f json -o bandit-report.json -lll || true
        continue-on-error: false

      - name: Upload bandit results
        uses: actions/upload-artifact@v4
        with:
          name: bandit-report
          path: bandit-report.json

  build:
    name: Build Package
    runs-on: ubuntu-latest
    needs: [lint, type-check, test, test-ml]
    steps:
      - uses: actions/checkout@v4

      - name: Set up Python
        uses: actions/setup-python@v5
        with:
          python-version: '3.10'
          cache: 'pip'

      - name: Install build tools
        run: |
          python -m pip install --upgrade pip
          pip install build

      - name: Build packages
        run: |
          python -m build packages/core/
          python -m build packages/context-code/
          python -m build packages/soar/
          python -m build packages/reasoning/
          python -m build packages/cli/
          python -m build packages/testing/

      - name: Upload build artifacts
        uses: actions/upload-artifact@v4
        with:
          name: dist-packages
          path: packages/*/dist/
