{
  "version": "1.1.0",
  "mode": "standalone",
  "storage": {
    "type": "sqlite",
    "path": "./.aurora/memory.db",
    "max_connections": 10,
    "timeout_seconds": 5
  },
  "llm": {
    "provider": "anthropic",
    "model": "claude-3-5-sonnet-20241022",
    "api_key_env": "ANTHROPIC_API_KEY",
    "base_url": null,
    "timeout_seconds": 30,
    "temperature": 0.7,
    "max_tokens": 4096
  },
  "context": {
    "code": {
      "enabled": true,
      "languages": ["python"],
      "max_file_size_kb": 500,
      "cache_ttl_hours": 24,
      "hybrid_weights": {
        "activation": 0.6,
        "semantic": 0.4,
        "top_k": 100,
        "fallback_to_activation": true
      }
    }
  },
  "search": {
    "min_semantic_score": 0.70,
    "embedding_model": "sentence-transformers/all-MiniLM-L6-v2"
  },
  "escalation": {
    "threshold": 0.7,
    "enable_keyword_only": false,
    "force_mode": null
  },
  "memory": {
    "auto_index": true,
    "index_paths": ["."],
    "chunk_size": 1000,
    "overlap": 200
  },
  "mcp": {
    "always_on": false,
    "log_file": "./.aurora/logs/mcp.log",
    "max_results": 10
  },
  "budget": {
    "limit": 10.0,
    "tracker_path": "~/.aurora/budget_tracker.json"
  },
  "agents": {
    "discovery_paths": [],
    "manifest_path": "./.aurora/cache/agent_manifest.json",
    "refresh_interval_days": 1,
    "fallback_mode": "llm_only"
  },
  "logging": {
    "level": "INFO",
    "path": "./.aurora/logs/",
    "max_size_mb": 100,
    "max_files": 10
  },
  "planning": {
    "base_dir": "./.aurora/plans",
    "template_dir": null,
    "auto_increment": true,
    "archive_on_complete": false
  },
  "soar": {
    "default_tool": "claude",
    "default_model": "sonnet"
  },
  "spawner": {
    "max_concurrent": 4,
    "stagger_delay": 5.0,
    "default_policy": "patient"
  },
  "proactive_health_checks": {
    "enabled": true,
    "check_interval": 5.0,
    "no_output_threshold": 15.0,
    "failure_threshold": 3
  },
  "early_detection": {
    "enabled": true,
    "check_interval": 2.0,
    "stall_threshold": 15.0,
    "min_output_bytes": 100,
    "stderr_pattern_check": true,
    "memory_limit_mb": null
  },
  "headless": {
    "tools": ["claude"],
    "strategy": "first_success",
    "parallel": true,
    "max_iterations": 10,
    "timeout": 600,
    "tool_configs": {
      "claude": {
        "priority": 1,
        "timeout": 600,
        "flags": ["--print", "--dangerously-skip-permissions"],
        "input_method": "argument",
        "env": {},
        "working_dir": null,
        "enabled": true,
        "max_retries": 2,
        "retry_delay": 1.0
      },
      "opencode": {
        "priority": 2,
        "timeout": 600,
        "flags": [],
        "input_method": "stdin",
        "env": {},
        "working_dir": null,
        "enabled": true,
        "max_retries": 2,
        "retry_delay": 1.0
      }
    },
    "routing_rules": []
  }
}
